@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rosa = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none
	
body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
figure
	margin 0
	
img
	vertical-align top

ul
	margin 0
	padding 0
	
//buttons
.button-menu
	color gris_oscuro
	margin-top -10px
	position absolute
	top 50%
	
//oocss clases
.container
	font-size 0
	padding 1.4rem
	text-align center
	
.actions
	position absolute
	bottom 0
	right 0
	left 0
	background rgba(black,.3)
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro

.cancion
	color gris_oscuro

.menu
	display none

.relative
	position relative
	
.padding
	padding 1em

.padding-tb
	padding 1em 0

.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size 0.8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		height 5px
		background rosa
		width 30%
		border-radius 5px
		position relative
		.circle
			background gris_oscuro
			border-radius 50%
			height 10px
			width 10px
			position absolute
			right 0
			top -2px
			
.autor
	color gris_claro
.center-block
	margin 0 auto
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.center-text
	text-align center
.right-text
	text-align right
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.left
	float left
.right
	float right		
	
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8em
	&:nth-child(even) // a los pares de song
		margin-right 0
	p
		margin .5em 0
		
.playing
	&.small
		width 20em
		margin 0 auto
		
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .4em
	color gris_claro
	right .5em	
	font-size 1.2em
.playlist
	display none
	width 22em
	padding 0 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size 14px
.logo
	display none
.isotipo
	width 122px
.logo
	padding 1.3em 0
	overflow hidden
	background white
	display none
	
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
@media screen and (min-width:1000px)
	body
		background gris_mas_claro
		.button-menu
			display none
		.playing
			padding-top 1.3em			
			&.large
				margin 0 auto
				width 62.5em
				overflow hidden
		.menu
			display block
			background gris_mas_claro
			overflow hidden
			border-top 1px solid gris_claro
			.item
				float left
				list-style none
				a
					color gris_oscuro
					display block
					padding 1em
					text-transform uppercase
					border-top 5px solid transparent
					&:hover
						border-top 5px solid gris_claro
		.music
			width 32.5em
			float left
			margin-top 2em
			.description
				display none
		
		.header
			height auto
			border none
			.title
				display none
		.logo
		.playlist
			display block